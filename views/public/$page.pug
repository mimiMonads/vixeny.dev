          import { unified } from "unified";
          import rehypeDocument from "rehype-document";

          const staticServer = {
            type: "fileServer",
            name: "/",
            path: "./views/public/",
            slashIs: "$main",
            template: [
              remarkStaticServer(unified)({
                uses: [
